# AdminFlow AI Environment Configuration
# Copy this file to .env and fill in your actual credentials

MISTRAL_API_KEY=your_mistral_api_key_here

# Email Provider (gmail or outlook)
EMAIL_PROVIDER=gmail

# Gmail Configuration (Required for Gmail)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REFRESH_TOKEN=your_google_refresh_token_here
GOOGLE_ACCESS_TOKEN=your_google_access_token_here
GOOGLE_SMTP_USER=your_gmail_address@gmail.com
GOOGLE_APP_PASSWORD=your_16_char_app_password_here

# Outlook Configuration (Required for Outlook)
OUTLOOK_CLIENT_ID=your_outlook_client_id_here
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret_here
OUTLOOK_ACCESS_TOKEN=your_outlook_access_token_here
OUTLOOK_SMTP_USER=your_outlook_email@outlook.com
OUTLOOK_SMTP_PASSWORD=your_password_here
# OR: OUTLOOK_APP_PASSWORD=your_16_char_app_password_here

# Supabase (Optional - for database storage)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
