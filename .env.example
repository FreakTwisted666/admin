# AdminFlow AI - Environment Configuration

# Mistral AI API Key (Free: https://mistral.ai/)
MISTRAL_API_KEY=your_mistral_api_key_here

# Email Provider Configuration
# Options: 'gmail' or 'outlook'
EMAIL_PROVIDER=gmail

# ==============================
# Gmail Configuration
# ==============================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_google_refresh_token
GOOGLE_ACCESS_TOKEN=your_google_access_token

# Gmail SMTP (Required for sending emails)
GOOGLE_SMTP_USER=your_gmail_address@gmail.com
GOOGLE_APP_PASSWORD=your_16_char_app_password

# Outlook Configuration
# ==============================
OUTLOOK_CLIENT_ID=your_outlook_client_id
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret
OUTLOOK_ACCESS_TOKEN=your_outlook_access_token

# Outlook SMTP (Required for sending emails)
OUTLOOK_SMTP_USER=your_outlook_email@outlook.com
OUTLOOK_SMTP_PASSWORD=your_password
# OR use Outlook App Password (recommended):
# OUTLOOK_APP_PASSWORD=your_16_char_app_password

# Supabase (Database)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Generic Email Configuration (alternative names)
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
