---
import Layout from '../layouts/Layout.astro';
import Dashboard from '../components/Dashboard.astro';
import { SignedIn, SignedOut, SignInButton } from "@clerk/astro/components";
---

<Layout 
  title="AdminFlow AI - Intelligent Administrative Automation Platform"
  description="AdminFlow AI is an AI-powered administrative automation platform that handles email management, smart scheduling, and document generation. Automate your workflow with Mistral AI integration."
>
  <main class="animate-fade-in">
    <SignedIn>
      <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-8 text-gray-800">Welcome to Your Dashboard</h1>
        <Dashboard />
      </div>
    </SignedIn>
    
    <SignedOut>
      <!-- Hero Section -->
      <section class="relative overflow-hidden py-20 lg:py-32">
        <!-- Background gradient orbs -->
        <div class="absolute top-0 left-1/4 w-96 h-96 bg-primary-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-float"></div>
        <div class="absolute top-0 right-1/4 w-96 h-96 bg-purple-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-float" style="animation-delay: 1s;"></div>
        <div class="absolute -bottom-32 left-1/2 w-96 h-96 bg-pink-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-float" style="animation-delay: 2s;"></div>
        
        <div class="container mx-auto px-4 relative z-10">
          <div class="max-w-5xl mx-auto text-center">
            <!-- Badge -->
            <div class="inline-flex items-center space-x-2 bg-primary-100 text-primary-700 px-4 py-2 rounded-full text-sm font-medium mb-8 animate-slide-down">
              <span class="relative flex h-2 w-2">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-primary-500"></span>
              </span>
              <span>Powered by Mistral AI</span>
            </div>
            
            <!-- Main Headline -->
            <h1 class="text-5xl md:text-7xl font-extrabold text-gray-900 mb-6 leading-tight animate-slide-up">
              Your AI-Powered
              <span class="gradient-text block">Administrative Team</span>
            </h1>
            
            <!-- Subheadline -->
            <p class="text-xl md:text-2xl text-gray-600 mb-10 max-w-3xl mx-auto animate-slide-up" style="animation-delay: 0.1s;">
              Automate 80% of your admin work. Handle emails, schedule meetings, and generate documents 
              with intelligent AI that works while you focus on growth.
            </p>
            
            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-16 animate-scale-in" style="animation-delay: 0.2s;">
              <SignInButton 
                mode="modal" 
                class="w-full sm:w-auto px-8 py-4 bg-gradient-to-r from-primary-600 to-primary-700 text-white rounded-xl font-bold text-lg hover:from-primary-700 hover:to-primary-800 transition shadow-xl hover:shadow-2xl transform hover:scale-105"
              />
              <a 
                href="#features" 
                class="w-full sm:w-auto px-8 py-4 bg-white text-primary-600 border-2 border-primary-600 rounded-xl font-bold text-lg hover:bg-primary-50 transition shadow-md hover:shadow-lg"
              >
                See How It Works
              </a>
            </div>
            
            <!-- Social Proof -->
            <div class="flex flex-wrap items-center justify-center gap-8 text-gray-400 animate-fade-in" style="animation-delay: 0.3s;">
              <div class="flex items-center space-x-2">
                <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-sm font-medium">No credit card required</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-sm font-medium">Free tier available</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-sm font-medium">Setup in 2 minutes</span>
              </div>
            </div>
          </div>
        </div>
      </section>
      
      <!-- Features Section -->
      <section id="features" class="py-20 bg-white">
        <div class="container mx-auto px-4">
          <div class="text-center mb-16 animate-slide-up">
            <h2 class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-4">
              Everything You Need to
              <span class="gradient-text">Automate Admin Work</span>
            </h2>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
              Powerful AI tools that handle your repetitive tasks so you can focus on what matters.
            </p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
            <!-- Feature 1 -->
            <div class="feature-card p-8 bg-gradient-to-br from-white to-gray-50 rounded-2xl shadow-lg border border-gray-100 animate-scale-in">
              <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-700 rounded-2xl flex items-center justify-center text-3xl mb-6 shadow-lg">
                ðŸ“§
              </div>
              <h3 class="text-2xl font-bold text-gray-900 mb-3">Email Automation</h3>
              <p class="text-gray-600 mb-4">
                AI-powered priority sorting and intelligent response suggestions. Never miss an important email again.
              </p>
              <ul class="space-y-2 text-gray-600">
                <li class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>Gmail & Outlook integration</span>
                </li>
                <li class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>Smart priority detection</span>
                </li>
                <li class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>One-click AI responses</span>
                </li>
              </ul>
            </div>
            
            <!-- Feature 2 -->
            <div class="feature-card p-8 bg-gradient-to-br from-white to-gray-50 rounded-2xl shadow-lg border border-gray-100 animate-scale-in" style="animation-delay: 0.1s;">
              <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-700 rounded-2xl flex items-center justify-center text-3xl mb-6 shadow-lg">
                ðŸ“…
              </div>
              <h3 class="text-2xl font-bold text-gray-900 mb-3">Smart Scheduling</h3>
              <p class="text-gray-600 mb-4">
                Eliminate scheduling back-and-forth. AI finds perfect meeting times across time zones.
              </p>
              <ul class="space-y-2 text-gray-600">
                <li class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>Auto conflict detection</span>
                </li>
                <li class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>Time zone optimization</span>
                </li>
                <li class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>Professional booking links</span>
                </li>
              </ul>
            </div>
            
            <!-- Feature 3 -->
            <div class="feature-card p-8 bg-gradient-to-br from-white to-gray-50 rounded-2xl shadow-lg border border-gray-100 animate-scale-in" style="animation-delay: 0.2s;">
              <div class="w-16 h-16 bg-gradient-to-br from-pink-500 to-pink-700 rounded-2xl flex items-center justify-center text-3xl mb-6 shadow-lg">
                ðŸ“„
              </div>
              <h3 class="text-2xl font-bold text-gray-900 mb-3">Document Generator</h3>
              <p class="text-gray-600 mb-4">
                Create professional contracts, invoices, and proposals instantly with AI-powered templates.
              </p>
              <ul class="space-y-2 text-gray-600">
                <li class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>AI-built templates</span>
                </li>
                <li class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>Instant customization</span>
                </li>
                <li class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>Export to PDF/Word</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </section>
      
      <!-- How It Works Section -->
      <section class="py-20 bg-gradient-to-br from-primary-50 via-white to-purple-50">
        <div class="container mx-auto px-4">
          <div class="text-center mb-16 animate-slide-up">
            <h2 class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-4">
              Get Started in
              <span class="gradient-text">Minutes</span>
            </h2>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
              Four simple steps to transform your administrative workflow.
            </p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-4 gap-8 max-w-6xl mx-auto">
            <!-- Step 1 -->
            <div class="text-center animate-scale-in">
              <div class="w-20 h-20 bg-gradient-to-br from-primary-500 to-primary-700 text-white rounded-full flex items-center justify-center text-3xl font-bold mx-auto mb-6 shadow-xl">
                1
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">Connect Accounts</h3>
              <p class="text-gray-600">Link your email, calendar, and document storage in seconds with secure OAuth.</p>
            </div>
            
            <!-- Step 2 -->
            <div class="text-center animate-scale-in" style="animation-delay: 0.1s;">
              <div class="w-20 h-20 bg-gradient-to-br from-purple-500 to-purple-700 text-white rounded-full flex items-center justify-center text-3xl font-bold mx-auto mb-6 shadow-xl">
                2
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">AI Analysis</h3>
              <p class="text-gray-600">Mistral AI analyzes your workflow and identifies automation opportunities.</p>
            </div>
            
            <!-- Step 3 -->
            <div class="text-center animate-scale-in" style="animation-delay: 0.2s;">
              <div class="w-20 h-20 bg-gradient-to-br from-pink-500 to-pink-700 text-white rounded-full flex items-center justify-center text-3xl font-bold mx-auto mb-6 shadow-xl">
                3
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">Automate Tasks</h3>
              <p class="text-gray-600">Set up automated workflows for emails, scheduling, and documents.</p>
            </div>
            
            <!-- Step 4 -->
            <div class="text-center animate-scale-in" style="animation-delay: 0.3s;">
              <div class="w-20 h-20 bg-gradient-to-br from-blue-500 to-blue-700 text-white rounded-full flex items-center justify-center text-3xl font-bold mx-auto mb-6 shadow-xl">
                4
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">Monitor & Optimize</h3>
              <p class="text-gray-600">Track time saved and refine automation rules as your business grows.</p>
            </div>
          </div>
        </div>
      </section>
      
      <!-- Benefits Section -->
      <section class="py-20 bg-white">
        <div class="container mx-auto px-4">
          <div class="text-center mb-16 animate-slide-up">
            <h2 class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-4">
              Why Teams Love
              <span class="gradient-text">AdminFlow AI</span>
            </h2>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
              Real benefits that impact your bottom line.
            </p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <div class="p-8 bg-gradient-to-br from-green-50 to-emerald-50 rounded-2xl border border-green-100 animate-scale-in">
              <div class="text-4xl font-bold text-green-600 mb-2">80%</div>
              <div class="text-gray-900 font-semibold mb-2">Time Reduction</div>
              <p class="text-gray-600 text-sm">Reduce administrative workload by up to 80%</p>
            </div>
            
            <div class="p-8 bg-gradient-to-br from-blue-50 to-cyan-50 rounded-2xl border border-blue-100 animate-scale-in" style="animation-delay: 0.1s;">
              <div class="text-4xl font-bold text-blue-600 mb-2">10-15h</div>
              <div class="text-gray-900 font-semibold mb-2">Saved Weekly</div>
              <p class="text-gray-600 text-sm">Average time saved per user every week</p>
            </div>
            
            <div class="p-8 bg-gradient-to-br from-purple-50 to-violet-50 rounded-2xl border border-purple-100 animate-scale-in" style="animation-delay: 0.2s;">
              <div class="text-4xl font-bold text-purple-600 mb-2">2min</div>
              <div class="text-gray-900 font-semibold mb-2">Setup Time</div>
              <p class="text-gray-600 text-sm">Get started in under 2 minutes</p>
            </div>
            
            <div class="p-8 bg-gradient-to-br from-orange-50 to-amber-50 rounded-2xl border border-orange-100 animate-scale-in" style="animation-delay: 0.3s;">
              <div class="text-4xl font-bold text-orange-600 mb-2">99.9%</div>
              <div class="text-gray-900 font-semibold mb-2">Uptime</div>
              <p class="text-gray-600 text-sm">Enterprise-grade reliability</p>
            </div>
          </div>
        </div>
      </section>
      
      <!-- FAQ Section -->
      <section id="faq" class="py-20 bg-gradient-to-br from-slate-50 via-white to-primary-50">
        <div class="container mx-auto px-4">
          <div class="text-center mb-16 animate-slide-up">
            <h2 class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-4">
              Frequently Asked
              <span class="gradient-text">Questions</span>
            </h2>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
              Everything you need to know about AdminFlow AI.
            </p>
          </div>
          
          <div class="max-w-3xl mx-auto space-y-4">
            <!-- FAQ 1 -->
            <div class="p-6 bg-white rounded-2xl shadow-md border border-gray-100 animate-slide-up">
              <h3 class="text-lg font-bold text-gray-900 mb-2">What is AdminFlow AI?</h3>
              <p class="text-gray-700">AdminFlow AI is an AI-powered administrative automation platform that handles email management, smart scheduling, and document generation using Mistral AI technology.</p>
            </div>
            
            <!-- FAQ 2 -->
            <div class="p-6 bg-white rounded-2xl shadow-md border border-gray-100 animate-slide-up" style="animation-delay: 0.1s;">
              <h3 class="text-lg font-bold text-gray-900 mb-2">How much does AdminFlow AI cost?</h3>
              <p class="text-gray-700">AdminFlow AI offers a free tier with basic features. Premium plans start at $19/month for advanced automation and priority support.</p>
            </div>
            
            <!-- FAQ 3 -->
            <div class="p-6 bg-white rounded-2xl shadow-md border border-gray-100 animate-slide-up" style="animation-delay: 0.2s;">
